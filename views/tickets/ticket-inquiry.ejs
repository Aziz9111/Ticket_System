<%- include("../includes/head") , { title: 'Ticket Creation Page' } %>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<link rel="stylesheet" href="/styles/validation.css" />
<body>
  <%- include('../includes/header') %>
  <main>
    <form class="validation-form" action="/ticket/inquiry" method="POST">
      <h1>Ticket Inquiry</h1>
      <% if (messages.error ) {%>
        <div class="error">
          <li class="fa fa-times-circle">
            <%= messages.error %>
          </li>
        </div>
        <% } %>
      <div>
        <label for="ticketId">Ticket Number: <span class="req">*</span></label>
        <input type="number" id="ticketId" name="ticketId" value="" required />
      </div>

      <div>
        <label for="email">Email: <span class="req">*</span></label>
        <input type="email" id="email" name="email" value="" required />
      </div>

<!--       <div class="g-recaptcha" data-sitekey="6LcRiFgqAAAAAOE5xTh0tVYahMjZNpVwEX7RfRR6"></div>
 -->      
      <button type="submit" class="btn">Search</button>
    </form>
  </main>
  <%- include("../includes/footer") %>
</body>
