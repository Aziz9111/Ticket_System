<%- include("../includes/head") , { title: 'Ticket Creation Page' } %>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<link rel="stylesheet" href="/styles/validation.css" />
<link rel="stylesheet" href="/styles/navbar.css" />

<body>
  <%- include('../includes/header') %>
  <main>
    <form
      class="validation-form"
      action="/create_ticket"
      method="POST"
      enctype="multipart/form-data"
    >
      <h1>Ticket Creation</h1>
      <% if (messages.error ) {%>
      <div class="error">
        <li class="fa fa-times-circle"><%= messages.error %></li>
      </div>
      <% } %>
      <div>
        <label for="title">Title: <span class="req">*</span></label>
        <input type="title" id="title" name="title" value="" required />
      </div>

      <div>
        <label for="description">Description: <span class="req">*</span></label>
        <textarea
          type="description"
          id="description"
          name="description"
          value=""
          required
        >
        </textarea>
      </div>

      <div>
        <label for="image">Photo Of The Problem:</label>
        <input
          type="file"
          id="image"
          name="image"
          value=""
          accept="image/png, image/jpg"
        />
      </div>

      <div>
        <label for="email">Enter Your Email: <span class="req">*</span></label>
        <input type="email" id="email" name="email" value="" required />
      </div>

      <div
        class="g-recaptcha"
        data-sitekey="6LcRiFgqAAAAAOE5xTh0tVYahMjZNpVwEX7RfRR6"
      ></div>

      <button type="submit" class="btn">Create</button>
    </form>
  </main>
  <%- include("../includes/footer") %>
</body>
