<%- include("../includes/head") , { title: 'انشاء حساب جديد' }%>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<link rel="stylesheet" href="/styles/auth.css" />
<link rel="stylesheet" href="/styles/navbar.css" />

<body>
  <%- include('../includes/header') %>
  <main>
    <form class="validation-form" action="/signup" method="POST">
      <h1>إنشاء حساب</h1>
      <% if (messages.error ) {%>
      <div class="error">
        <li class="fa fa-times-circle"><%= messages.error %></li>
      </div>
      <% } %>
      <div>
        <label for="username">الاسم:</label>
        <span class="req">*</span>
        <input
          type="text"
          id="username"
          name="username"
          value="<%= formData ? formData.username : '' %>"
          required
          oninvalid="this.setCustomValidity('الرجاء إدخال الاسم')"
          oninput="this.setCustomValidity('')"
        />
      </div>
      <div>
        <label for="email">الايميل:</label>
        <span class="req">*</span>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= formData ? formData.email : '' %>"
          required
          oninvalid="this.setCustomValidity('الرجاء إدخال البريد الإلكتروني')"
          oninput="this.setCustomValidity('')"
        />
      </div>
      <div>
        <label for="Password">كلمة المرور:</label>
        <span class="req">*</span>
        <input
          type="password"
          id="password"
          name="password"
          value=""
          required
          minlength="6"
          oninvalid="this.setCustomValidity('الرجاء إدخال كلمة المرور')"
          oninput="this.setCustomValidity('')"
        />
      </div>
      <div>
        <label for="confirmedPassword">تاكيد كلمة المرور:</label>
        <span class="req">*</span>
        <input
          type="password"
          id="confirmedPassword"
          name="confirmedPassword"
          value=""
          required
          minlength="6"
          oninvalid="this.setCustomValidity('الرجاء إدخال تاكيد كلمة المرور')"
          oninput="this.setCustomValidity('')"
        />
      </div>
      <div
        class="g-recaptcha"
        data-sitekey="6LfaiJsqAAAAAPSDWEaYPXqJqdWLV-6pFYHNefG-"
        data-action="Create Ticket"
      ></div>
      <br />
      <div>
        <button class="btn">انشئ حساب</button>
        <p>اذا كان لديك حساب <a class="btn" href="/login">سجل دخول</a></p>
      </div>
    </form>
  </main>
  <%- include("../includes/footer") %>
</body>
